<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List!</title>
  </head>
  <body>
    <h1>To Do List</h1>
    <h2>Categories:</h2>
    @if (Model.Count != 0) {
      @foreach (var category in Model) {
        <p><a href="/categories/@category.GetId()">@category.GetName()</a></p>
      }
    }
    <h4><a href="/categories/new">Add a new category</a></h4>
    <h4><a href="/tasks/new">Add a new task</a></h4>
  </body>
</html>
